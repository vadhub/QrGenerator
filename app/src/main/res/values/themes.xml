<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.QrScanner" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/blue_200</item>
        <item name="colorPrimaryVariant">@color/blue_300</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">#f50057</item>
        <item name="colorSecondaryVariant">#F73378</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="textViewer">
        <item name="android:textSize">24sp</item>
    </style>

    <style name="editText">
        <item name="android:layout_marginBottom">10sp</item>
        <item name="android:layout_marginStart">10sp</item>
        <item name="android:layout_marginEnd">10sp</item>
        <item name="android:layout_marginTop">10sp</item>
    </style>

    <style name="btnStyle">
        <item name="android:layout_marginBottom">8sp</item>
    </style>

    <style name="cardViewStyle">
        <item name="android:layout_marginStart">10dp</item>
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:layout_marginEnd">10dp</item>
        <item name="cardCornerRadius">10dp</item>
        <item name="cardElevation">2sp</item>

    </style>
</resources>